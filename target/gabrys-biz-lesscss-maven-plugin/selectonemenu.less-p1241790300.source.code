/*  SelectOneMenu */

div.ui-selectonemenu .ui-selectonemenu-trigger,div.ui-selectonemenu-trigger .ui-state-focus,
div.ui-selectcheckboxmenu .ui-selectcheckboxmenu-trigger {
  border-color: #ffffff;
}

div.ui-selectonemenu-trigger {
  &.ui-state-hover, &.ui-state-focus {
    border: 1px solid transparent;
    background: #eeeeee;
  }
}
  .ui-selectcheckboxmenu.ui-state-focus .ui-selectcheckboxmenu-label,
  .ui-selectcheckboxmenu .ui-selectcheckboxmenu-label.ui-state-hover {
    background-color: #ffffff;
  }

  .ui-selectonemenu {
    height: 34px;
    display: block !important;
    border-color: #d2d6de !important;
    border-radius: 0 !important;
    min-width: 150px!important; /* primefaces adds min-width: 328px; when on ui-state-exception */
  }
  .ui-selectonemenu-trigger {
    width: 30px !important;
    padding: 3px 6px !important;
    border-radius: 0 !important;
  }

  .ui-selectonemenu-label {
    padding: 6px !important;
  }


